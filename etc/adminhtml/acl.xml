        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="FishPig_WordPress::config_wordpress" title="WordPress Integration Configuration" sortOrder="80" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Catalog::catalog">
                    <resource id="FishPig_WordPress::post_association" title="Blog Post Association" translate="title" sortOrder="50" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
