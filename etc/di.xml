<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
	<type name="FishPig\WordPress\App\Integration\Tests">
		<arguments>
			<argument name="integrationTests" xsi:type="array">
				<item name="mode" xsi:type="object">FishPig\WordPress\App\Integration\Test\ModeTest</item>
				<item name="subdirectoryMode" xsi:type="object">FishPig\WordPress\App\Integration\Test\SubdirectoryModeTest</item>
				<item name="externalMode" xsi:type="object">FishPig\WordPress\App\Integration\Test\ExternalModeTest</item>
				<item name="apiMode" xsi:type="object">FishPig\WordPress\App\Integration\Test\ApiModeTest</item>
				<item name="theme" xsi:type="object">FishPig\WordPress\App\Integration\Test\ThemeTest</item>				
				<item name="url" xsi:type="object">FishPig\WordPress\App\Integration\Test\UrlTest</item>
				<item name="permalink" xsi:type="object">FishPig\WordPress\App\Integration\Test\PermalinkTest</item>
				<!--
				<item name="network" xsi:type="object">FishPig\WordPress\Model\Integration\NetworkTest</item>
				<item name="core" xsi:type="object">FishPig\WordPress\Model\Integration\CoreTest</item>
				-->
			</argument>
		</arguments>
	</type>
    <!--
    /**
     * Database
     */
    -->
    <type name="FishPig\WordPress\App\ResourceConnection\ConfigRetriever">
		<arguments>
			<argument name="objects" xsi:type="array">
				<item name="subdirectory" xsi:type="string">FishPig\WordPress\App\Integration\Mode\Subdirectory\WPConfig</item>
				<item name="external" xsi:type="string">FishPig\WordPress\App\Integration\Mode\External\Config</item>
			</argument>
		</arguments>
    </type>
    <!--
    /**
     * Theme
     */
    -->
    <type name="FishPig\WordPress\App\Theme\RemoteHashRetrieverResolver">
		<arguments>
			<argument name="objects" xsi:type="array">
				<item name="subdirectory" xsi:type="string">FishPig\WordPress\App\Integration\Mode\Subdirectory\Theme\RemoteHashRetriever</item>
				<item name="external" xsi:type="string">FishPig\WordPress\App\Integration\Mode\External\Theme\RemoteHashRetriever</item>
			</argument>
		</arguments>
    </type>
    <type name="FishPig\WordPress\App\Theme\FileCollector">
		<arguments>
			<argument name="modules" xsi:type="array">
				<item name="FishPig_WordPress" xsi:type="string">FishPig_WordPress</item>
			</argument>
		</arguments>
    </type>
    <!--
    /**
     * URLs
     */
    -->
    <type name="FishPig\WordPress\App\Url\SiteUrlResolver">
		<arguments>
			<argument name="objects" xsi:type="array">
				<item name="subdirectory" xsi:type="string">FishPig\WordPress\App\Integration\Mode\Subdirectory\Url\SiteUrl</item>
				<item name="external" xsi:type="string">FishPig\WordPress\App\Integration\Mode\External\Url\SiteUrl</item>
			</argument>
		</arguments>
    </type>
    <type name="FishPig\WordPress\App\Url\HomeUrlResolver">
		<arguments>
			<argument name="objects" xsi:type="array">
				<item name="subdirectory" xsi:type="string">FishPig\WordPress\App\Integration\Mode\Subdirectory\Url\HomeUrl</item>
				<item name="external" xsi:type="string">FishPig\WordPress\App\Integration\Mode\External\Url\HomeUrl</item>
			</argument>
		</arguments>
    </type>
    <!--
    /**
     * Options
     */
    -->
    <type name="FishPig\WordPress\App\Option\ValueResolver">
		<arguments>
			<argument name="objects" xsi:type="array">
				<item name="subdirectory" xsi:type="string">FishPig\WordPress\App\Integration\Mode\Subdirectory\Option</item>
				<item name="external" xsi:type="string">FishPig\WordPress\App\Integration\Mode\External\Option</item>
			</argument>
		</arguments>
    </type>
    <!--
    /**
     * CLI
     */
    -->
	<type name="Magento\Framework\Console\CommandList">
		<arguments>
			<argument name="commands" xsi:type="array">
				<item name="fishpig-wordpress-build-theme" xsi:type="object">FishPig\WordPress\Console\Command\BuildThemePackageCommand</item>
				<item name="fishpig-wordpress-debug" xsi:type="object">FishPig\WordPress\Console\Command\DebugCommand</item>
				
			</argument>
		</arguments>
	</type>

	<type name="FishPig\WordPress\Model\Logger\Handler">
		<arguments>
			<argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
		</arguments>
	</type>
	<type name="FishPig\WordPress\Model\Logger">
		<arguments>
			<argument name="name" xsi:type="string">FishPig_WordPress</argument>
			<argument name="handlers"  xsi:type="array">
				<item name="system" xsi:type="object">FishPig\WordPress\Model\Logger\Handler</item>
			</argument>
		</arguments>
	</type>
    <!--
    /**
     * Legacy
     */
    -->
    <virtualType name="FishPig\WordPress\Model\ResourceConnection" type="FishPig\WordPress\Legacy\Model\ResourceConnection"/>
    <virtualType name="FishPig\WordPress\Model\OptionManager" type="FishPig\WordPress\Legacy\Model\OptionManager"/>
    <virtualType name="FishPig\WordPress\Model\IntegrationManager" type="FishPig\WordPress\Legacy\Model\IntegrationManager"/>
    
    <!--
    /**
     * Review and Remove
     */
    -->
	<!-- Setup dynamic router -->
	<type name="Magento\Framework\App\Router\ActionList">
		<plugin name="FishPig_WordPress" type="FishPig\WordPress\Plugin\Magento\Framework\App\Router\ActionListPlugin" sortOrder="10" disabled="false"/>
	</type>
	<!-- Add blog links to XML sitemap -->
	<type name="Magento\Sitemap\Model\ItemProvider\Composite">
		<arguments>
			<argument name="itemProviders" xsi:type="array">
				<item name="wordpressPostProvider" xsi:type="object">FishPig\WordPress\Model\Sitemap\ItemProvider\Post</item>
			</argument>
		</arguments>
	</type>
	<!-- Factory -->
	<type name="FishPig\WordPress\Model\Factory">
		<arguments>
			<argument name="factories" xsi:type="array">
				<item name="post" xsi:type="object">FishPig\WordPress\Model\PostFactory</item>
				<item name="postType" xsi:type="object">FishPig\WordPress\Model\PostTypeFactory</item>
			</argument>
		</arguments>
	</type>
	<!-- Integration Manager -->
	<!-- Widgets -->
	<type name="FishPig\WordPress\Model\WidgetManager">
		<arguments>
			<argument name="widgets" xsi:type="array">
				<item name="search" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Search</item>
				<item name="pages" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Pages</item>
				<item name="recent-posts" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Posts</item>
				<item name="recent-comments" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Comments</item>
				<item name="archives" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Archives</item>
				<item name="categories" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Categories</item>
				<item name="tag_cloud" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Cloud</item>
				<item name="text" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Text</item>
				<item name="meta" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Meta</item>
				<item name="nav_menu" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\NavMenu</item>
				<item name="calendar" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\Calendar</item>
				<item name="media_image" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\MediaImage</item>
				<item name="custom_html" xsi:type="string">FishPig\WordPress\Block\Sidebar\Widget\CustomHtml</item>
			</argument>
		</arguments>
	</type>
	<!-- WordPress logger - var/log/wordpress.log -->
    <type name="FishPig\WordPress\Model\CacheInvalidator">
        <arguments>
            <argument name="factories" xsi:type="array">
                <item name="wordpress_post" xsi:type="object">FishPig\WordPress\Model\PostFactory</item>
                <!--<item name="wordpress_term" xsi:type="object">FishPig\WordPress\Model\TermFactory</item>-->
            </argument>
        </arguments>
    </type>
	<!-- etc/wordpress_core.xml -->
    <virtualType name="WordPressCoreConfigReader" type="Magento\Framework\Config\Reader\Filesystem">
        <arguments>
            <argument name="converter" xsi:type="object">FishPig\WordPress\Model\Config\Core\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">FishPig\WordPress\Model\Config\Core\SchemaLocator</argument>
            <argument name="fileName" xsi:type="string">wordpress_core.xml</argument>
        </arguments>
    </virtualType>
    <type name="FishPig\WordPress\Model\Config\Core">
        <arguments>
            <argument name="reader" xsi:type="object">WordPressCoreConfigReader</argument>
            <argument name="cacheId" xsi:type="string">fishpig_wordpress_core_config</argument>
        </arguments>
    </type>
</config>