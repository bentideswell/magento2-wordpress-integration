$blockLevel = (int)$block->getLevel();
?>
<li class="level<?= $blockLevel ?> item<?php if ($block->isCurrentTerm($block->getTerm())): ?> active<?php endif; ?>">
    <a  class="level<?= $blockLevel ?>" href="<?= $block->escapeUrl($block->getTerm()->getUrl()) ?>" title="<?= $$block->escapeHtml(__($block->getTerm()->getName())) ?>">
        <?= $block->escapeHtml(__($block->getTerm()->getName())) ?>
    </a>
    <?php if ($block->canShowCount()): ?> (<?= $block->getTerm()->getItemCount() ?>)<?php endif; ?>
    <?php if ($block->isHierarchical()): ?>
        <?php $children = $block->getTerm()->getChildrenTerms()->load() ?>
        <?php if (count($children) > 0): ?>
            <ul class="level<?= $blockLevel + 1 ?>">
                <?php foreach ($children as $child): ?>
                    <?= $block->drawChildItem($child, $blockLevel + 1) ?>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
    <?php endif; ?>
</li>